<body class="bg-gray-900 text-white">

  <!-- Header -->
  <header class="flex justify-between items-center p-4">
    <div class="flex items-center">
      <img src="https://source.unsplash.com/featured/?fish" alt="Logo" class="w-12 h-12 mr-2">
      <h1 class="text-xl font-bold">Research Portal</h1>
    </div>
    <div class="flex items-center gap-4">
      <div class="relative">
        <input type="text" placeholder="Search" class="bg-gray-800 text-white rounded-full pl-4 pr-10 py-2 focus:outline-none focus:ring focus:border-blue-300">
        <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400">
